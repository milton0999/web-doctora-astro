// src/layouts/Layout.astro
import { getCollection } from 'astro:content';
const { title, description } = Astro.props;

// Obtener configuraci√≥n global
const settings = await getCollection('settings');
const siteSettings = settings[0]?.data || {
  site_name: 'Centro M√©dico Gonzalitos',
  slogan: 'Cuidando tu salud con la mejor tecnolog√≠a y atenci√≥n humana',
  description: 'Ecograf√≠as y ultrasonidos de alta calidad en Monterrey',
  logo: null,
  whatsapp_number: '528115883775',
  phone_number: '81 1588 3775',
  email_contact: 'info@centromedicogonzalitos.com',
  address: 'Monterrey, N.L.',
  hours: 'Lun-Vie: 8am-8pm, S√°b: 8am-2pm',
  facebook_url: null,
  instagram_url: null
};

// Obtener colecciones para navegaci√≥n
const servicios = await getCollection('servicios');
const adultos = servicios.filter(s => s.data.categoria === 'Adulto');
const embarazadas = servicios.filter(s => s.data.categoria === 'Embarazada');
const pediatrico = servicios.filter(s => s.data.categoria === 'Pediatrico');

// Obtener promociones activas
const promotions = await getCollection('promotions');
const activePromotions = promotions.filter(p => 
  p.data.active && new Date(p.data.valid_until) > new Date()
);
