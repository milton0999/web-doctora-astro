---
// src/layouts/Layout.astro
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Centro Médico Gonzalitos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --azul-oscuro: #1D3B6B;
            --verde-medico: #37BF4B;
        }
        nav { background-color: var(--azul-oscuro); }
        .btn-cita { background-color: var(--verde-medico); color: white; border-radius: 20px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark p-3">
        <div class="container">
            <a class="navbar-brand font-weight-bold" href="/">Centro Médico Gonzalitos</a>
        </div>
    </nav>

    <slot /> <footer class="text-center py-4 mt-5 bg-light">
        <p>© 2024 Centro Médico Gonzalitos - Monterrey</p>
    </footer>
</body>
</html>